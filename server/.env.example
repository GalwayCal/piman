# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-key
JWT_EXPIRES_IN=24h

# Database Configuration (if using a database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=piman
DB_USER=postgres
DB_PASSWORD=password

# SSH Configuration
SSH_TIMEOUT=30000
SSH_READY_TIMEOUT=20000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/piman.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Device Discovery
DEVICE_DISCOVERY_INTERVAL=300000
DEVICE_HEARTBEAT_INTERVAL=60000 